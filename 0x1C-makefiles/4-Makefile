# Makefile with an executable named school where the all rule builds the executable
# Define variables
CC = gcc
SRC = main.c school.c
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rules
%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
flcean: clean oclean
re: fclean all
